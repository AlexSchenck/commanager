{
	"extends": [
		"tslint-eslint-rules"
	],
	"rules": {
		"adjacent-overload-signatures": true,
		"ban-comma-operator": true,
		"block-spacing": [
			true,
			"always"
		],
		"brace-style": [
			"error",
			"1tbs"
		],
		"class-name": true,
		"comment-format": [
			true,
			"check-space"
		],
		"interface-name": [
			true,
			"always-prefix"
		],
		"member-access": true,
		"member-ordering": [
			true,
			{
				"order": "fields-first"
			}
		],
		"object-curly-spacing": [
			true,
			"always"
		],
		"only-arrow-functions": true,
		"no-conditional-assignment": true,
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-variable": true,
		"no-empty": true,
		"no-trailing-whitespace": true,
		"no-unused-expression": true,
		"no-var-keyword": true,
		"prefer-const": true,
		"prefer-for-of": true,
		"quotemark": [
			true,
			"single",
			"avoid-escape"
		],
		"semicolon": [
			true,
			"always"
		],
		"space-in-parens": "never",
		"ter-arrow-spacing": [
			true
		],
		"ter-indent": [
			true,
			4,
			{
				"SwitchCase": 1
			}
		],
		"trailing-comma": [
			true,
			{
				"multiline": "never",
				"singleline": "never"
			}
		],
		"triple-equals": true,
		"unnecessary-constructor": true,
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-leading-underscore",
			"allow-pascal-case"
		]
	}
}